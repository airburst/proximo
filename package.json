{
  "name": "typescript",
  "version": "1.0.0",
  "description": "typescript startup",
  "main": "index.js",
  "scripts": {
    "dev": "lite-server",
    "clean": "rm -rf dist/",
    "watch": "watchify app/app.ts -p [ tsify -m --noImplicitAny ] -t sassify -o dist/bundle.js",
    "start": "concurrently \"npm run watch\" \"npm run dev\""
  },
  "disable-scripts": {
    "es6": "browserify main.ts -p [ tsify --noImplicitAny ] -t [babelify --presets [ es2015 ]] > dist/bundle.js"
  },
  "author": "Mark Fairhurst",
  "license": "ISC",
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "concurrently": "^2.2.0",
    "lite-server": "^2.2.2",
    "sassify": "^1.0.0",
    "tsify": "^0.16.0",
    "typescript": "^1.8.10",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "@types/es6-promise": "0.0.27-alpha",
    "bootstrap": "^3.3.6"
  }
}
